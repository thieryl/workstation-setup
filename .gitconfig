# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
#	name = thieryl
#	email = thiery.louison@redboxdigital.com
	email = thiery.louison@redboxdigital.com
	name = thiery louison
[alias]
    aa = add --all
    bv = branch -vv
    ba = branch -ra
    bd = branch -d
    ca = commit --amend
    cb = checkout -b
    cm = commit -a --amend -C HEAD
    am = commit -am
    ci = commit -a -v
    co = checkout
    di = diff
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    ld = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph
    ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    ve = log --pretty=format:"%C(blue)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --oneline --decorate --all --graph
    vz = log --pretty=oneline --graph --decorate --all
    mm = merge --no-ff
    st = status --short --branch
    tg = tag -a
    pu = push --tags
    un = reset --hard HEAD
    uh = reset --hard HEAD^
	it = !git init && git commit -m “root” --allow-empty
[color]
	ui = true
[commit]
	template = /home/thieryl/.dotfiles/committemplate.txt
[core]
	autocrlf = true
